{
  "name": "teachtrack-cbc",
  "version": "1.0.0",
  "description": "Curriculum tracking system for Kenyan CBC teachers",
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python main.py",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\"",
    "install:all": "cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "build:frontend": "cd frontend && npm run build"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "concurrently": "^9.1.0"
  }
}
